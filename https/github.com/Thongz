        function showPackages(category) {
            const container = document.getElementById('packageList');
            container.innerHTML = '';
            
            const categoryName = category.charAt(0).toUpperCase() + category.slice(1);
            document.getElementById('packagesTitle').textContent = categoryName.replace('diamond', 'Diamond').replace('starlight', 'Starlight') + ' Packages';

            config.packages[category].forEach(pkg => {
                const listItem = document.createElement('li');
                listItem.className = 'package-item';
                let noteHTML = pkg.note ? `<div class="note">${pkg.note}</div>` : '';

                listItem.innerHTML = `
                    <div class="package-info">
                        <img src="${pkg.icon}" alt="${pkg.name} icon">
                        <div class="package-details">
                            <div>${pkg.name}</div>
                            <div class="price">${pkg.price}</div>
                            ${noteHTML}
                        </div>
                    </div>
                    <button class="buy-btn" onclick="openPaymentModal('${pkg.name}', '${pkg.value} for ${pkg.price}')">Buy Now</button>
                `;
                container.appendChild(listItem);
            });

            document.getElementById('main-menu').style.display = 'none';
            document.getElementById('packages-section').style.display = 'block';
        }

        function showMainMenu() {
            document.getElementById('main-menu').style.display = 'block';
            document.getElementById('packages-section').style.display = 'none';
        }

        let currentPackage = '';

        function openPaymentModal(title, description) {
            document.getElementById('modalTitle').textContent = title;
            document.getElementById('modalDescription').textContent = description;
            currentPackage = description;
            
            // Clear inputs for fresh use
            document.getElementById('userID').value = '';
            document.getElementById('serverID').value = '';
            document.getElementById('transactionDetails').value = '';

            document.getElementById('purchaseModal').style.display = 'block';
        }

        function closeModal() {
            document.getElementById('purchaseModal').style.display = 'none';
        }

        document.getElementById('whatsappLink').onclick = function() {
            const userID = document.getElementById('userID').value;
            const serverID = document.getElementById('serverID').value;
            const transDetails = document.getElementById('transactionDetails').value;
            const packageInfo = currentPackage || document.getElementById('modalTitle').textContent;
            
            // The message will be sent to the number defined in config.whatsappNumber
            let message = `*GAME HUB STORE ORDER DETAILS*%0A`;
            message += `*Package:* ${packageInfo}%0A%0A`;
            message += `*Game ID:* ${userID}%0A`;
            message += `*Server ID:* ${serverID}%0A%0A`;
            message += `*Payment Details:*%0A${transDetails}%0A%0A`;
            message += `(Please confirm the payment was successfully completed before sending this message.)`;
            
            const whatsappURL = `https://wa.me/${config.whatsappNumber}?text=${message}`;
            window.open(whatsappURL, '_blank');
        };

        window.onclick = function(event) {
            if (event.target == document.getElementById('purchaseModal')) {
                closeModal();
            }
        };
